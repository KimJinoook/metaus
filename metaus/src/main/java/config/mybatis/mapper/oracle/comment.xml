<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.metaus.comment.model.CommentDAO">
<insert id="insertComment" parameterType="commentVo">
	<selectKey resultType="int" keyProperty="cmtNo"
			order="BEFORE">
			select fp_comment_seq.nextval from dual
	</selectKey>
		insert into fp_comment(cmt_no, cmt_content, board_no, mem_no)
		values(cmtNo, #{cmtContent}, #{boardNo}, #{memNo})
	</insert>
	
	<select id="selectComment" parameterType="int" resultType="commentVo">
		select * from fp_comment
		where board_no=#{boardNo}
	</select>
	
	<delete id="deleteComment" parameterType="int">
		delete fp_comment
		where cmt_no=#{cmtNo}
	</delete>
	
	<select id="countComment" parameterType="int" resultType="int">
		select count(*) from fp_comment
		where board_no=#{boardNo}
	</select>
</mapper>